<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tv_coin_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_d4dae5"
            android:fontFamily="@font/din_medium"
            android:textSize="16sp"
            android:text="BTC"/>

        <TextView
            android:id="@+id/tv_coin_name2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_medium"
            android:textColor="@color/color_647187"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:text="/USDT"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6039.86"
            android:fontFamily="@font/din_medium"
            android:textColor="@color/color_04ad90"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/color_0a1221"/>
</LinearLayout>