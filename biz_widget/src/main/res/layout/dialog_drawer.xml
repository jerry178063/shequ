<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/select_type_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        app:tabGravity="fill"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="@color/transparent"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="0dp"
        app:xTabMode="scrollable"
        app:xTabSelectedTextColor="@color/color_2A2D31"
        app:xTabSelectedTextSize="20sp"
        app:xTabTextSelectedBold="true"
        app:xTabTextColor="@color/color_2A2D31"
        app:xTabTextSize="20sp"
        app:xTabTextBold="true"/>

    <com.space.widget.widget.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>