<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/shape_dialog_white_10_k_bg"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_20">
       <TextView
           android:id="@+id/tv_bizhong"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:textSize="@dimen/sp_14"
           android:textColor="#232323"
           android:layout_alignParentLeft="true"/>
       <TextView
           android:id="@+id/tv_bizhong_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="兑换中"
           android:textColor="#FF5602"
           android:textSize="@dimen/sp_14"
           android:layout_alignParentRight="true"/>

   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#232323"
                android:text="兑换"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#232323"
                android:text="76.7USDT"/>

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/zhuanhuan_two"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#232323"
                android:text="兑换为"/>

            <TextView
                android:id="@+id/tv_other_flash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#232323"
                android:text="10UNIQUE"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源地址"
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_laiyuan_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="矿工费"
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_kuanggongfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.09USDT"
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textSize="@dimen/sp_12"
            android:textColor="#232323"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换时间"
            android:textColor="#232323"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#959595"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>