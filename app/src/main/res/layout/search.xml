<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_225"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_225"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225"
            android:scaleType="centerCrop"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/search_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:background="@drawable/shop"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="1.5dp"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="1.5dp"
                    android:text="艺术品"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_11"></TextView>

                <TextView
                    android:id="@+id/search_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:gravity="center_vertical"
                    android:textColor="#000002"
                    android:textSize="@dimen/dp_11"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_nft_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="固定价 (UNIQUE)"
                android:textColor="#939393"
                android:textSize="@dimen/sp_8" />

            <TextView
                android:id="@+id/tv_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:text="0.000000"
                android:textColor="#CD3E3E"
                android:textSize="@dimen/sp_18" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lin_pai_mai"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:background="@drawable/shijian"
                        android:scaleType="centerCrop"></ImageView>

                    <TextView
                        android:id="@+id/shi_jian"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#939393"
                        android:textSize="@dimen/dp_11"></TextView>

                    <ImageView
                        android:id="@+id/pai_mai"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/paimai"
                        android:scaleType="centerCrop"
                        android:textSize="@dimen/dp_11"
                        android:visibility="gone">

                    </ImageView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_transfer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:text="正在转移..."
                android:textColor="#9A9A9A"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_choose_btn"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/unchoose_collect"
            android:visibility="gone" />

    </FrameLayout>


</androidx.cardview.widget.CardView>