<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_225"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_225"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225"
            android:scaleType="centerCrop">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#414141"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/search_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingTop="1.5dp"
                    android:paddingBottom="1.5dp"
                    android:background="@drawable/shop"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="艺术品"
                    android:textSize="@dimen/dp_11"></TextView>

                <TextView
                    android:id="@+id/search_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:gravity="center_vertical"
                    android:textColor="#ffff"
                    android:textSize="@dimen/dp_11"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_pai_mai"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/shijian"></ImageView>

                <TextView
                    android:id="@+id/shi_jian"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_30"
                    android:textColor="#7E725C"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/dp_11"></TextView>

                <ImageView
                    android:id="@+id/pai_mai"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/paimai"
                    android:scaleType="centerCrop"
                    android:textSize="@dimen/dp_11">

                </ImageView>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_transfer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:text="正在转移..."
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#9A9A9A"/>
        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>