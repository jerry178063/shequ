<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_330">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_298"
                    android:background="#323232"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_70"
                    android:background="@drawable/wivff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/dp_12">
                        <ImageView
                            android:id="@+id/img_user"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/touxiang" />
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_10">

                            <LinearLayout
                                android:id="@+id/lin_change_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_nicheng"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_20"
                                    android:textColor="#232323"
                                    android:text="昵称" />

                                <ImageView
                                    android:id="@+id/img_change_info"
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:scaleType="centerCrop"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:src="@drawable/bianji" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_gexing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:textColor="#B39B9B"
                                android:visibility="gone"
                                android:textSize="@dimen/sp_13"
                                android:text="编辑个性签名..." />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/me_unqique"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="#232323"
                            android:text=""
                            android:textSize="@dimen/dp_14"></TextView>

                        <ImageView
                            android:id="@+id/img_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:src="@drawable/fuzhi"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_40">

                        <LinearLayout
                            android:id="@+id/lin_num_zichan"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#A5A5A5"
                                android:drawableTop="@mipmap/num_zichan"
                                android:drawablePadding="@dimen/dp_5"
                                android:textSize="@dimen/sp_12"
                                android:text="数字资产"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_my_collection"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#A5A5A5"
                                android:drawableTop="@mipmap/my_collected"
                                android:textSize="@dimen/sp_12"
                                android:drawablePadding="@dimen/dp_8"
                                android:text="我的收藏"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_receive_monery"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/dp_57">

                            <ImageView
                                android:layout_width="@dimen/dp_43"
                                android:layout_height="@dimen/dp_43"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shoukuanma">

                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/me_chakan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@drawable/nfto"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jiao_yiiii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include layout="@layout/jiaoyi"></include>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_shuzi_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62">

                    <ImageView
                        android:id="@+id/img_shuzi"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bianp"></ImageView>

                    <TextView
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center"
                        android:text="认证数字店铺"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_shuzi"
                        android:textSize="@dimen/dp_15"></TextView>

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/next_right"></ImageView>
                </RelativeLayout>
                <View
                    android:layout_below="@+id/re_yinsi"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F7F7F7"/>

                <RelativeLayout
                    android:id="@+id/re_zhiya_me"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62">

                    <ImageView
                        android:id="@+id/img_zhiya"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/meiyuan"></ImageView>

                    <TextView
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center"
                        android:text="质押保证金"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_zhiya"
                        android:textSize="@dimen/dp_15"></TextView>

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/next_right"></ImageView>
                </RelativeLayout>
                <View
                    android:layout_below="@+id/re_yinsi"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#F7F7F7"/>

                <RelativeLayout
                    android:id="@+id/rea_set_new"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_62">

                    <ImageView
                        android:id="@+id/img_set_new"
                        android:layout_width="@dimen/dp_38"
                        android:layout_height="@dimen/dp_38"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/me_set"></ImageView>

                    <TextView
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center"
                        android:text="设置"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/img_set_new"
                        android:textSize="@dimen/dp_15"></TextView>

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_19"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/next_right"></ImageView>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="我的"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/rela_wallet_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:src="@drawable/qianbao1" />


</RelativeLayout>


</FrameLayout>