<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_addresslist_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/personal_lian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4F5050"
                    android:layout_alignParentLeft="true"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_choosed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/address_choose_bg"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_1"
                    android:layout_toRightOf="@+id/personal_lian"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="默认"
                    android:textColor="#E2B374"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/personal_add_xiugai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:text="修改"
                    android:textColor="#2F87FF"
                    android:textSize="15sp"
                    android:visibility="gone"></TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/personal_dian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#BBBBBB"
                android:textSize="15sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textColor="#ff202121"
                    android:textSize="15sp"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/personal_di"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#535454"
                    android:textSize="15sp"></TextView>

                <ImageView
                    android:id="@+id/img_choosed"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user_info_choose"
                    android:textSize="15sp"
                    android:visibility="gone"></ImageView>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_address_xiugai"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/xiugai_address_img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/dp_78"
        android:layout_height="match_parent"
        android:background="#D13939"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="centerCrop"
            android:src="@mipmap/lajitong_white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>