<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.activity.wallet.AssetsDetailActivity">

   <!-- <include
        android:id="@+id/top"
        layout="@layout/topics_head_sss_layout" />-->
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/bg_go_trade">

        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/trade_back_two" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="转  账"
            android:textColor="@color/white" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_all_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="@dimen/dp_27"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/cread_wallet_bg"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/ed_scan_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入接收地址"
                android:text=""
                android:textSize="@dimen/sp_16"
                android:textColorHint="#BBBCBE"
                android:textColor="@color/color_303235"
                android:layout_height="@dimen/dp_56"/>

            <ImageView
                android:id="@+id/img_saoyisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_erweima"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNIQUE"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="#232323"
            android:textSize="@dimen/sp_16"/>
        <View
            android:layout_below="@+id/re_yinsi"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#E7E7E7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转账数量"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:textColor="@color/color_303235"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@null"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="最小数量0.000001"
                android:textSize="@dimen/sp_16"
                android:inputType="numberDecimal"
                android:textColorHint="#BBBCBE"
                android:textColor="@color/color_303235"
                android:layout_height="@dimen/dp_56"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIQUE"/>

        </LinearLayout>
        <View
            android:layout_below="@+id/re_yinsi"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#E7E7E7"/>

        <TextView
            android:id="@+id/tc_can_get_gauss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可用UNIQUE:"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="right"
            android:textColor="#BF997A"
            android:textSize="@dimen/sp_14"/>
        <View
            android:layout_below="@+id/re_yinsi"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#E7E7E7"/>

        <RelativeLayout
            android:id="@+id/rela_icon_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矿工费"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:textColor="@color/color_303235"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:id="@+id/tv_icon_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.009 UNIQUE"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:textColor="@color/color_A9AAAB"
                android:textSize="@dimen/sp_14"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_taansfer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:text="@string/transfer"
        android:textColor="#B5A081"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cread_shape"/>

</RelativeLayout>