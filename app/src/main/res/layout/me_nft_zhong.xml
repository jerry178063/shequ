<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    android:layout_width="@dimen/dp_351"
    android:layout_height="@dimen/dp_170">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/nft_zhong_img"
            android:layout_width="150dp"
            android:layout_height="@dimen/dp_170">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20">
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shop"
                    android:text="艺术品"
                    android:gravity="center"
                    android:textSize="@dimen/dp_11"
                    android:id="@+id/nft_zhong_type"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_14">
                </TextView>
                <TextView
                    android:id="@+id/nft_zhong_name"
                    android:text="西里里的夏天"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="最高出价"
                        android:textSize="@dimen/dp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/nft_zhong_high"
                        android:text="10"
                        android:textSize="@dimen/dp_20"
                        android:textColor="#ED0707"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textSize="@dimen/dp_13"
                        android:textColor="#ED0707"
                        android:text="uniqie"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/dp_13"
                        android:text="最低价格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/nft_zhong_Low"
                        android:text="0.02"
                        android:textSize="@dimen/dp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:textSize="@dimen/dp_13"
                        android:textColor="#ED0707"
                        android:text="uniqie"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="正在转移"
                    android:textSize="@dimen/dp_15"
                    android:textColor="#F10707"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_17">

                </TextView>
                <TextView
                    android:text="确认收货"
                    android:textSize="@dimen/dp_15"
                    android:background="@drawable/shopp"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_27"
                    android:gravity="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
