<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.trade.CommissionRateActivity">

    <include
        android:id="@+id/top"
        layout="@layout/topics_head_sss_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证人自留佣金收益"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/dialog_bg">

                <EditText
                    android:id="@+id/et_input_rate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textFontWeight="1"
                    android:paddingLeft="@dimen/dp_15"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="%"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
    <TextView
        android:id="@+id/tv_additional"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_height="@dimen/dp_46"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/assets_detail_transfer_bg"
        android:textColor="@color/white"
        android:text="确认修改"/>

</RelativeLayout>