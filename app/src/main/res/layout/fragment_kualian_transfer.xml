<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".view.fragment.wallet.AllassetsFragment"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/lin_all_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/home_shandui_choose_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从"
                android:textSize="@dimen/sp_15"
                android:textColor="#A46C40"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="@dimen/sp_15"
                android:hint="UNIQUE"
                android:text=""
                android:textColor="@color/color_303235"
                android:textColorHint="#BBBCBE"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/zhuanhuan"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/home_shandui_choose_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到"
                android:textSize="@dimen/sp_15"
                android:textColor="#A46C40"/>
            <EditText
                android:id="@+id/ed_scan_content"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="@dimen/sp_15"
                android:hint="请输入接收地址"
                android:text=""
                android:textColor="@color/color_303235"
                android:textColorHint="#BBBCBE"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_saoyisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_erweima" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/home_shandui_choose_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="UNIQUE"
                android:visibility="gone"
                android:textColor="#232323"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/re_yinsi"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#E7E7E7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="转账数量"
                    android:textColor="@color/color_303235"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_56"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="最小数量0.000001"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_303235"
                    android:textColorHint="#BBBCBE"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIQUE" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/re_yinsi"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="#E7E7E7" />

            <TextView
                android:id="@+id/tc_can_get_gauss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:text="可用UNIQUE:"
                android:textColor="#BF997A"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/re_yinsi"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#E7E7E7" />

            <RelativeLayout
                android:id="@+id/rela_icon_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="矿工费:"
                    android:textColor="@color/color_303235"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_icon_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="0.009 UNIQUE"
                    android:textColor="@color/color_A9AAAB"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_taansfer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/cread_shape"
        android:gravity="center"
        android:text="@string/transfer"
        android:textColor="#B5A081"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>