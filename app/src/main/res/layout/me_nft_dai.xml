<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    android:layout_width="@dimen/dp_351"
    android:layout_height="@dimen/dp_170">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/nft_dai_img"
            android:layout_width="170dp"
            android:layout_height="@dimen/dp_170">
        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20">
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shop"
                    android:text="艺术品"
                    android:gravity="center"
                    android:textSize="@dimen/dp_11"
                    android:id="@+id/nft_dai_type"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_14">
                </TextView>
                <TextView
                    android:id="@+id/nft_dai_name"
                    android:text="西里里的夏天"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58">

                <TextView
                    android:id="@+id/nft_dai_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“五月天演唱会门票”"
                    android:textColor="#ff9095ab"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:text="转移"
                    android:gravity="center"
                    android:textColor="#5BBB82"
                    android:background="#E9FFF2"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_27">

                </TextView>
                <TextView
                    android:text="去交易"
                    android:gravity="center"
                    android:textColor="#DF3838"
                    android:textSize="@dimen/dp_15"
                    android:background="#FFEFEF"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_27">
                </TextView>
                <TextView
                    android:text="提货"
                    android:gravity="center"
                    android:textColor="#3982EF"
                    android:textSize="@dimen/dp_15"
                    android:background="#E3F2FF"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="@dimen/dp_27">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>