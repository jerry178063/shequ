<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6"
    tools:context=".view.fragment.mark.Art_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#828282"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            android:paddingBottom="@dimen/dp_10"
            android:text="链上资产" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/re_yinsi"
            android:visibility="gone"
            android:background="#F7F7F7" />

        <RelativeLayout
            android:id="@+id/rela_unique_monery"
            android:layout_width="match_parent"
            android:background="@drawable/shape_dialog_white_10_k_bg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="@dimen/dp_90">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_25">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_img"
                android:layout_marginLeft="@dimen/sp_15"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical">



            <TextView
                android:id="@+id/tv_name_lianshang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:text="UNIQUE"
                android:textColor="#828282"
                android:textSize="@dimen/dp_15"></TextView>

            <TextView
                android:id="@+id/tv_unique_monery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#6A84B1"
                android:text="0.000000"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/right_back"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/next_right"></ImageView>
        </RelativeLayout>

    </LinearLayout>


</FrameLayout>