<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.wallet.CreateUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top"
            layout="@layout/topics_head_sss_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:text="输入验证人公钥"
            android:textColor="@color/color_646566"
            android:textSize="@dimen/sp_14" />
        <!-- android:background="@drawable/cread_wallet_bg"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_centerVertical="true"
                android:background="@drawable/dialog_bg"
                android:hint="请输入验证人公钥"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <ImageView

                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_b_name"
                android:visibility="gone"></ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#ff8e8892"
                android:visibility="gone"></View>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="节点名称"
            android:textColor="@color/color_646566"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_centerVertical="true"
                android:background="@drawable/dialog_bg"
                android:hint="请输入节点名称"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_b_password"
                android:visibility="gone"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="质押数量"
                android:textColor="@color/color_646566"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_gaussmonery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="@dimen/dp_15">

            <EditText
                android:id="@+id/et_passwordc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入质押数量"
                android:textSize="@dimen/sp_16"
                android:inputType="numberDecimal"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <TextView
                android:id="@+id/tv_all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_15"
                android:text="全部"
                android:textColor="@color/color_303235"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="佣金比例"
                android:textColor="@color/color_646566"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="@dimen/dp_15">

            <EditText
                android:id="@+id/et_yongjin_bl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="15"
                android:enabled="false"
                android:hint="20"
                android:textSize="@dimen/sp_16"
                android:inputType="numberDecimal"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_15"
                android:text="%"
                android:textColor="@color/color_303235"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="验证人自留佣金收益"
                android:textColor="@color/color_646566"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="@dimen/dp_15">

            <EditText
                android:id="@+id/et_input_me_bai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入自留佣金收益比例"
                android:textSize="@dimen/sp_16"
                android:inputType="number"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp_15"
                android:text="%"
                android:textColor="@color/color_303235"></TextView>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ziliu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_4"
            android:text=""
            android:textColor="@color/color_303235"></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="设置邀请收益比例"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_646566"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_set_shouyi_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/dialog_bg"
                android:gravity="center"
                android:hint="请设置收益比例"
                android:inputType="number"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/color_303235" />

            <EditText
                android:id="@+id/et_set_shouyi_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_56"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/dialog_bg"
                android:gravity="center"
                android:hint="收益比例"
                android:enabled="false"
                android:inputType="number"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="%"
                android:textColor="@color/color_303235" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="最小委托值"
                android:textColor="@color/color_646566"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/dialog_bg"
            android:paddingLeft="@dimen/dp_15">

            <EditText
                android:id="@+id/et_set_min_weituo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入最小委托值"
                android:textSize="@dimen/sp_16"
                android:inputType="numberDecimal"
                android:textColor="@color/color_303235"
                android:textColorHint="@color/color_A9AAAB"></EditText>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rela_kuanggongfei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="矿工费"
                android:textColor="@color/color_303235"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_kuangongfei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/fragmentation_ic_right"
                android:drawablePadding="@dimen/dp_5"
                android:text="0.006 GPB"
                android:textColor="@color/color_303235"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="简介描述"
                android:textColor="@color/color_646566"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:text=""
                android:textColor="#A9AAAB"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_135">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_135"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/dialog_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_5">

                <EditText
                    android:id="@+id/et_input_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入简介描述"
                    android:paddingTop="@dimen/dp_10"
                    android:inputType="text"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_303235"
                    android:textColorHint="@color/color_A9AAAB"></EditText>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_135"
                android:gravity="end"
                android:layout_marginRight="@dimen/dp_25"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="0/120" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_create_verfication"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/cread_shape"
            android:gravity="center"
            android:text="成为验证人"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"></TextView>
    </LinearLayout>
</ScrollView>