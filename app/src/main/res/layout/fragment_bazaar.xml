<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:background="@drawable/bg_go_trade"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                style="@style/demoStyle"
                android:checked="true"
                android:id="@+id/fragment_LiuLan"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_25"
                android:textColor="@drawable/text_black"
                android:text="浏览"
                android:textSize="@dimen/dp_18" >
            </RadioButton>

            <RadioButton
                android:id="@+id/fragment_ReMen"
                style="@style/demoStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_25"
                android:text="热门拍卖"
                android:textColor="@drawable/text_black"
                android:textSize="@dimen/dp_18" />

        </RadioGroup>
        <ImageView
            android:id="@+id/fragment_Tong"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/tongzhi"></ImageView>


    </LinearLayout>
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_75"
            android:layout_weight="1" />
</RelativeLayout>