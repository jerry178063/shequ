<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".view.activity.me.RegisterDigitalStoreActivity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/bg_go_trade">

        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@mipmap/trade_back_two" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_title_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="注册申请"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"

                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_32"
                        android:text="账号"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_15"></TextView>

                    <EditText
                        android:id="@+id/emailName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入邮箱地址"
                        android:textSize="@dimen/sp_14"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/re_yinsi"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="*请输入有效真实的邮箱地址，作为账户名ID"
                        android:textColor="#CD3E3E"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="密码"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_15"></TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50">

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_50"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="请输入您的密码"
                            android:inputType="textPassword"
                            android:maxLength="15"
                            android:textSize="@dimen/dp_14"></EditText>

                        <LinearLayout
                            android:id="@+id/lin_register_xianshi_yincang"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_50"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:gravity="bottom|center_horizontal"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_4">

                            <ImageView
                                android:id="@+id/register_xianshi_yincang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/yincang_new"
                                android:visibility="gone"></ImageView>

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="选择单位类型"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_14"></TextView>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_26"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton1"
                            style="@style/demoStyle"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_19"
                            android:background="@drawable/ge"
                            android:checked="true"
                            android:gravity="center"
                            android:text="企业"
                            android:textColor="@drawable/ppp"></RadioButton>

                        <RadioButton
                            android:id="@+id/radioButton2"
                            style="@style/demoStyle"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_19"
                            android:background="@drawable/ge"
                            android:gravity="center"
                            android:text="个体工商户"
                            android:textColor="@drawable/ppp"></RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="企业名称"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_14"></TextView>

                    <EditText
                        android:id="@+id/companyName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入企业名称"
                        android:maxLength="50"
                        android:textSize="@dimen/sp_14"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="社会信用代码（注册号）"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_14"></TextView>

                    <EditText
                        android:id="@+id/creditCode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="如：00000000001234"
                        android:maxLength="40"
                        android:textSize="@dimen/sp_14"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                    <LinearLayout
                        android:id="@+id/lin_qiyeyinhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_11"
                            android:text="企业银行对公账号"
                            android:textColor="#232323"
                            android:textSize="@dimen/sp_14"></TextView>

                        <EditText
                            android:id="@+id/bankCard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@null"
                            android:gravity="bottom"
                            android:hint="请输入您的企业银行对公账号"
                            android:inputType="phone"
                            android:maxLength="30"
                            android:textSize="@dimen/sp_14"></EditText>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="#E9E9E9" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="营业执照"
                        android:textColor="#232323"
                        android:textSize="@dimen/sp_14"></TextView>


                    <ImageView
                        android:id="@+id/img_add_yingyezhizhao"
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/sp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:src="@drawable/jia"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_32"
                        android:text="法定代表人归属地"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="*请输入您本人的真实信息，否则您的基础认证可能会失败"
                        android:textColor="#ED0909"
                        android:textSize="@dimen/sp_12"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_23"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:text="归属地"
                            android:textColor="#232323" />

                        <TextView
                            android:id="@+id/tv_choose_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="选择所在地区" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="姓名"
                        android:textColor="#232323"
                        android:textSize="@dimen/dp_14"></TextView>

                    <EditText
                        android:id="@+id/realName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入您的真实姓名"
                        android:textSize="@dimen/dp_10"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="证件号"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"></TextView>

                    <EditText
                        android:id="@+id/certificateNo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入您的身份证号"
                        android:textSize="@dimen/dp_10"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="#E9E9E9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_36">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="身份证信息面"
                            android:textSize="15sp"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="身份证国徽面"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/img_id_zhengmian"
                                android:layout_width="@dimen/dp_149"
                                android:layout_height="@dimen/dp_96"
                                android:scaleType="centerCrop"
                                android:src="@drawable/zheng"></ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_id_fan"
                                android:layout_width="@dimen/dp_149"
                                android:layout_height="@dimen/dp_96"
                                android:scaleType="centerCrop"
                                android:src="@drawable/fanmian"></ImageView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="注册地址"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"></TextView>

                    <EditText
                        android:id="@+id/registerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入您的通讯地址"
                        android:maxLength="60"
                        android:textSize="@dimen/dp_10"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/re_yinsi"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="手机号"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/mobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="bottom"
                                android:hint="请输入您的手机号码"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:textSize="@dimen/dp_10"></EditText>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/get_yzm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="获取验证码"
                            android:textColor="#ff0b9cfb"
                            android:textSize="14sp"></TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/re_yinsi"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="#E9E9E9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_26"
                        android:text="验证码"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_14"></TextView>

                    <EditText
                        android:id="@+id/inputYzm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@null"
                        android:gravity="bottom"
                        android:hint="请输入您的验证码"
                        android:textSize="@dimen/dp_10"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/re_yinsi"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_105"
                        android:background="#E9E9E9" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#F6F6F6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_43"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_30"
                        android:background="@drawable/cread_shape"
                        android:gravity="center"
                        android:text="提     交"
                        android:textColor="#B5A081"
                        android:textSize="@dimen/sp_18"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="*信息仅用于身份验证，UNIQUE保障您的信息安全"
                        android:textColor="#ff232323"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</LinearLayout>